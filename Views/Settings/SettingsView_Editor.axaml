<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:MercuryMapper.Assets.Lang"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="400"
             x:Class="MercuryMapper.Views.Settings.SettingsView_Editor">
    <ScrollViewer>
        <StackPanel Margin="20">
            <UniformGrid Columns="2">
                <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Settings_Editor_QuantizeOnPause}" ToolTip.Tip="{x:Static lang:Resources.ToolTip_QuantizeOnPause}"/>
                <CheckBox Name="CheckBoxQuantizeOnPause" HorizontalAlignment="Right" IsCheckedChanged="QuantizeOnPause_OnIsCheckedChanged" ToolTip.Tip="{x:Static lang:Resources.ToolTip_QuantizeOnPause}"/>
                
                <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Settings_Editor_HighlightPlacedNote}" ToolTip.Tip="{x:Static lang:Resources.ToolTip_HighlightPlacedNote}"/>
                <CheckBox Name="CheckBoxHighlightPlacedNote" HorizontalAlignment="Right" IsCheckedChanged="CheckBoxHighlightPlacedNote_OnIsCheckedChanged" ToolTip.Tip="{x:Static lang:Resources.ToolTip_HighlightPlacedNote}"/>
                
                <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Settings_Editor_LimitToMercuryBonusTypes}" ToolTip.Tip="{x:Static lang:Resources.ToolTip_HighlightPlacedNote}"/>
                <CheckBox Name="CheckBoxLimitToMercuryBonusTypes" HorizontalAlignment="Right" IsCheckedChanged="CheckBoxLimitToMercuryBonusTypes_OnIsCheckedChanged" ToolTip.Tip="{x:Static lang:Resources.ToolTip_HighlightPlacedNote}"/>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
